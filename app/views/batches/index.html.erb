<div class="flex-title">
  <h3>Batch Management</h3>
  <%= link_to 'New', new_batch_path, class: 'btn-sm btn btn-primary' %>
</div>
<br>
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="table table-bordered table-striped table-hover text-center">
    <thead>
    <tr>
      <th>Batch</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= batch.batch %></td>
        <td>
          <% colors = batch.open? ? 'success' : 'danger' %>
          <span class="badge bg-<%= colors %>">
            <%= Batch.human_attribute_name("status.#{batch.status}") %>
          </span>
        </td>
        <td>
          <%= link_to 'Edit', edit_batch_path(batch), class: 'btn-sm btn btn-success' %>
          <%= link_to 'Delete', batch_path(batch), data: { 'turbo-method': :delete, 'turbo_confirm': t('view.common.delete_confirm') }, class: 'btn-sm btn btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>