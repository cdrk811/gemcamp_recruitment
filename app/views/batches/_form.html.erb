<%= form_for batch, url: url, method: method, html: { class: 'border rounded w-100 my-3 p-3' }, data: { turbo: 'false' } do |f| %>
  <%= render 'shared/error_messages', resource: batch %>

  <div class="mb-3">
    <%= f.label :number, Batch.human_attribute_name(:number), class: 'form-label' %>:
    <%= f.text_field :number, required: true, class: 'form-control' %>
  </div>

  <div class="my-3">
    <%= f.label :status, Batch.human_attribute_name(:status), class: 'form-label' %>:
    <div class="me-3">
      <%= f.collection_radio_buttons :status, Batch.statuses, :first, ->(element) {Batch.human_attribute_name("status.#{element.first}")}, {}, required: true, class: 'form-check-input ms-3' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit submit_text, class: 'btn btn-secondary' %>
  </div>
<% end %>
