<%= form_for applicant, url: url, method: method, html: { class: 'border rounded w-100 my-3 p-3' }, data: { turbo: 'false' } do |f| %>
  <%= render 'shared/error_messages', resource: applicant %>

  <div class="mb-3">
    <%= hidden_field_tag :batch_id, Batch.batch_status %>
    <%= f.label :name, Applicant.human_attribute_name(:name), class: 'form-label' %>
    <%= f.text_field :name, { required: true, class: 'form-control', placeholder: 'Name' } %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, Applicant.human_attribute_name(:phone), class: 'form-label' %>
    <%= f.text_field :phone, { required: true, class: 'form-control', placeholder: 'Phone Number' } %>
  </div>

  <div class="mb-3">
    <%= f.label Applicant.human_attribute_name(:email) %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <%= f.submit submit_text, class: 'btn btn-secondary' %>
  </div>
<% end %>
