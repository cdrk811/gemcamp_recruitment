<%= form_for applicant, url: url, method: method, html: { class: 'border rounded w-100 my-3 p-3' }, data: { turbo: 'false' } do |f| %>
  <%= render 'shared/error_messages', resource: applicant %>

  <div class="mb-3">
    <%= label_tag :number, 'Number', class: 'form-label' %>
    <%= text_field_tag :number, @batch.number, disabled: true, class: 'form-control'  %>
  </div>

  <div class="mb-3">
    <%= f.label :name, Applicant.human_attribute_name(:name), class: 'form-label' %>
    <%= f.text_field :name, { required: true, class: 'form-control', placeholder: 'Name' } %>
  </div>

  <div class="mb-3">
    <%= f.label :phone, Applicant.human_attribute_name(:phone), class: 'form-label' %>
    <%= f.text_field :phone, { required: true, class: 'form-control', placeholder: 'Phone Number' } %>
  </div>

  <div class="mb-3">
    <%= f.label Applicant.human_attribute_name(:email) %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <%= f.fields_for :applicant_batch_ships do |a| %>
    <%= a.hidden_field :batch_id, value: @batch.id %>

    <div class="mb-3">
      <%= a.label 'Sourcing Channel' %>
      <%= a.text_field :sourcing_channel, class: 'form-control', placeholder: 'Sourcing Channel' %>
    </div>

    <div class="mb-3">
      <%= a.label 'Resume Link' %>
      <%= a.text_field :resume_link, class: 'form-control', placeholder: 'Resume Link', required: true %>
    </div>

    <div class="mb-3">
      <%= a.label 'Application Date' %>
      <%= a.datetime_field :application_date, class: 'form-control', placeholder: 'Application Date' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit submit_text, class: 'btn btn-secondary' %>
  </div>
<% end %>
